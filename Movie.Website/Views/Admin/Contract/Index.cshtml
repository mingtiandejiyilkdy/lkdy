      , { field: 'Remark', title: '备注' }
      , { field: 'StatusStr', title: '状态' }
      , { field: 'CreateBy', title: '录入人' }
      , { field: 'CreateIP', title: '录入IP' }
      , { field: 'CreateTime', title: '录入时间' } 
      , { field: 'lock', title: '操作', width: 60, toolbar: '#barDemo', unresize: true }
    ]]

        });
    });
