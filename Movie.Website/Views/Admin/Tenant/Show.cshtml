@using Movie.Model.Tenant;
@{
    ViewBag.Title = "Add";
    Layout = null;
    TenantModel showModel = ViewBag.model == null ? new TenantModel() : (TenantModel)ViewBag.model;
}
<link href="~/Plugins/layui/css/layui.css" rel="stylesheet" type="text/css" />
<script src="~/Plugins/layui/layui.js" type="text/javascript"></script>
<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
<form class="layui-form" action="" lay-filter="example">
<div class="layui-form-item" style="display: none;">
    <label class="layui-form-label">
        Id</label>
    <div class="layui-input-block">
        <input type="text" name="Id" lay-verify="Id" autocomplete="off" placeholder="" value="@showModel.ID"
            class="layui-input">
    </div>
</div>
<div class="layui-form-item" lay-filter="">
    <label class="layui-form-label">
        租户名称</label>
    <div class="layui-input-inline">
        <input type="text" name="TenantName" lay-verify="TenantName" autocomplete="off"
            placeholder="请输入租户名称" class="layui-input">
    </div>
    <div class="layui-form-mid layui-word-aux">
        字最小3位</div>
</div> 
<div class="layui-form-item" lay-filter="">
    <label class="layui-form-label">
        租户域名</label>
    <div class="layui-input-inline">
        <input type="text" name="TenantDomain" lay-verify="TenantDomain" autocomplete="off"
            placeholder="请输入租户名称" class="layui-input">
    </div>
    <div class="layui-form-mid layui-word-aux">
        字最小3位</div>
</div>  
<div class="layui-form-item" lay-filter="">
    <label class="layui-form-label">
        排序</label>
    <div class="layui-input-inline">
        <input type="text" name="Sort"  autocomplete="off"
            placeholder="请输入" class="layui-input">
    </div>
    <div class="layui-form-mid layui-word-aux">
        越大越靠前</div>
</div> 
<div class="layui-form-item">
    <label class="layui-form-label">
        启用</label>
    <div class="layui-input-block">
        <input type="radio" name="IsEnable" value="0" title="否">
        <input type="radio" name="IsEnable" value="1" title="是" checked="">
    </div>
</div> 
<div class="layui-form-item layui-hide">
    <input type="button" lay-submit lay-filter="layuiadmin-app-form-submit" id="layuiadmin-app-form-submit"
        value="确认添加">
    <input type="button" lay-submit lay-filter="layuiadmin-app-form-edit" id="layuiadmin-app-form-edit"
        value="确认编辑">
</div>
</form>
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form
  , layer = layui.layer
  , layedit = layui.layedit
  , admin = layui.admin
  , laydate = layui.laydate;

        //自定义验证规则
        form.verify({
            TenantName: function (value) {
                if (value.length < 3) {
                    return '用户名至少3个字符';
                }
            }
    , content: function (value) {
        layedit.sync(editIndex);
    }
        });

        //监听指定开关
        form.on('switch(switchTest)', function (data) {
            layer.msg('开关checked：' + (this.checked ? 'true' : 'false'), {
                offset: '6px'
            });
            layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是ON|OFF', data.othis)
        });


        //监听提交
        form.on('submit(layuiadmin-app-form-submit)', function (data) {
            var field = data.field; //获取提交的字段

            PostData(field);
            return false;
        });

        function PostData(data) {
            $.ajax({
                type: 'POST',
                url: "/Admin/Tenant/Save", // ajax请求路径
                data: data,
                dataType: 'json',
                success: function (data) {
                    if (data.success) {
                        //var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引  
                        //提交 Ajax 成功后，关闭当前弹层并重载表格 
                        var index = 1;
                        parent.layui.table.reload('test'); //重载表格    
                        layer.msg('操作成功');
                        parent.layer.close(index); //再执行关闭 
                    }
                    else {
                        layer.tips("操作不成功", obj.othis);
                    }
                }
            });
        };


        //表单初始赋值
        form.val('example', {
            "TenantName": "@showModel.TenantName"
            , "TenantDomain": "@showModel.TenantDomain" 
            ,"Status": "@showModel.Status"
            , "Sort": "@showModel.Sort"
            , "IsEnable": true //开关状态 
        })


    }); 
     
</script>
