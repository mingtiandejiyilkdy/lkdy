                    }
                }
            });
        };


        //表单初始赋值
        form.val('example', {
            "TicketBatchName": "@showModel.TicketBatchName"
            , "Sort": "@showModel.Sort"
            , "IsEnable": true //开关状态 
        })


    }); 
     
</script>
